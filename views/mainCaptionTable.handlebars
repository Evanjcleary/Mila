<link rel="stylesheet" href="/styles/table.css">
<div class="container text-center">
    <div class="row text-center">
        <div class="col">

            <button id="adminBtn" type="button" class="btn btn-primary">Return</button>
        </div>
        {{!-- <div class="col">
                <button id="foremanBtn" type="button" class="btn">Foreman</button>
            </div> --}}
    </div>
    <!-- Table to Display All Job Info -->
    <div class="row" id="tableBody">
        <div class="col">
            <div class="table">
                <h1>All Mira Captions</h1>
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Caption</th>
                            <th>Category</th>
                            <th>Tags</th>
                            <th>Author</th>
                            <th>Reference</th>
                            <th>Lyric?</th>
                            <th>Quote?</th>
                            <th>Original Author</th>
                            <th>Likes</th>
                            <th>Images</th>
                            <th>Comments</th>
                            <th>Created</th>
                            <th>Last Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each captions}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{caption}}</td>
                            <td>{{category}}</td>
                            <td>{{tags}}</td>
                            <td>{{author}}</td>
                            <td>{{reference}}</td>
                            <td>{{lyric}}</td>
                            <td>{{quote}}</td>
                            <td>{{originalAuthor}}</td>
                            <td>{{likes}}</td>
                            <td>{{images}}</td>
                            <td>{{comments}}</td>
                            <td>{{moment created_at format="MM-DD-YYYY"}}</td>
                            <td>{{moment updatedAt format="MM-DD-YYYY"}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>